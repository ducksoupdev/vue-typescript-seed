{
    "name": "vue-typescript-seed",
    "version": "1.0.0",
    "description": "A starter project for vue and typescript using webpack and bootstrap",
    "main": "index.js",
    "scripts": {
        "build": "npm run sass && npm run compile",
        "clean": "rimraf dist && rimraf coverage",
        "clean-css": "cleancss -o dist/css/main.min.css dist/css/main.css",
        "compile": "webpack",
        "coverage": "karma start karma.coverage.js && npm run ts-coverage-remap && npm run coverage-report-open",
        "coverage-report-open": "http-server coverage/html-ts/ -o -p 8888",
        "develop": "npm run sass && concurrent --kill-others \"webpack --watch\" \"node-sass --watch --output ./src/css ./src/sass\" \"live-server --quiet --open=src/\"",
        "dist": "npm run clean && npm run test && npm run sass && npm run build && npm run clean-css && npm run process-html",
        "lint": "ts-node ./scripts/ts-lint.ts -f src/**/*.ts",
        "process-html": "htmlprocessor src/index.html -o dist/index.html",
        "sass": "node-sass --output ./src/css ./src/sass",
        "serve": "http-server dist/ -o",
        "test": "karma start karma.unit.js",
        "ts-coverage-remap": "remap-istanbul -i coverage/json/coverage-final.json -o coverage/html-ts -t html"
    },
    "author": "Matt Levy",
    "devDependencies": {
        "@types/axios": "^0.9.34",
        "@types/es6-promise": "0.0.32",
        "@types/jasmine": "^2.5.40",
        "@types/jquery": "^2.0.39",
        "@types/node": "^6.0.60",
        "compression-webpack-plugin": "^0.3.2",
        "concurrently": "^3.1.0",
        "copy-webpack-plugin": "^4.0.1",
        "es6-promise": "^4.0.5",
        "file-loader": "^0.9.0",
        "globby": "~6.1.0",
        "htmlprocessor": "~0.2.3",
        "http-server": "^0.9.0",
        "inject-loader": "^3.0.0-beta3",
        "istanbul-instrumenter-loader": "^1.2.0",
        "jasmine-core": "^2.5.2",
        "json-loader": "^0.5.4",
        "karma": "^1.4.0",
        "karma-coverage": "^1.1.1",
        "karma-jasmine": "^1.1.0",
        "karma-junit-reporter": "^1.2.0",
        "karma-mocha-reporter": "^2.2.1",
        "karma-phantomjs-launcher": "^1.0.2",
        "karma-source-map-support": "^1.2.0",
        "karma-teamcity-reporter": "^1.0.0",
        "karma-webpack": "^2.0.1",
        "live-server": "~1.0.0",
        "lodash.merge": "^4.6.0",
        "minimist": "^1.2.0",
        "node-sass": "^4.1.1",
        "phantomjs-prebuilt": "^2.1.14",
        "raw-loader": "^0.5.1",
        "remap-istanbul": "^0.8.4",
        "rimraf": "^2.5.4",
        "ts-loader": "^1.3.3",
        "tslint": "~4.0.2",
        "tslint-loader": "~3.3.0",
        "typescript": "^2.1.4",
        "webpack": "^1.14.0",
        "webpack-dev-server": "^1.16.2"
    },
    "dependencies": {
        "axios": "^0.15.3",
        "bootstrap": "^3.3.7",
        "vue": "^2.1.8",
        "vue-class-component": "^4.4.0",
        "vue-property-decorator": "^3.2.1",
        "vue-router": "^2.1.1"
    }
}
